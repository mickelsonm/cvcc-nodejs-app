{
	"apiVersion": "extensions/v1beta1",
	"kind": "Deployment",
	"metadata": {
		"name": "cvcc-node"
	},
	"spec": {
		"replicas": 1,
		"template": {
			"metadata": {
				"labels": {
					"app": "cvcc-node"
				}
			},
			"spec": {
				"containers": [{
					"name": "cvcc-node",
					"image": "cvcc-node:production",
					"imagePullPolicy": "Never",
					"resources": {
						"requests": {
							"cpu": 0.05
						},
						"limits": {
							"cpu": 0.05
						}
					},
					"ports": [{
                        "containerPort": 8080,
                        "hostPort": 3001
					}],
					"env": [
						{
							"name": "NODE_ENV",
							"value": "production"
                        },
                        {
                        	"name": "PORT",
                        	"value": "3001"
                        }, 
                        {
                        	"name": "MONGO_HOST",
                        	"value": "cvcc-mongo"
                        },
                        {
                        	"name": "MONGO_PORT",
                        	"value": "27117"
                        }
					]
				}]
			}
		}
	}
}
